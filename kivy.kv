<CustomSnackbar>
    MDScreen:
        MDFloatLayout:
            MDLabel:
                id: text_bar
                size_hint_y: None
                height: self.texture_size[1]
                text: root.text
                font_size: root.font_size
                theme_text_color: 'Custom'
                text_color: 'ffffff'
                shorten: True
                shorten_from: 'right'
                pos_hint: {'center_y': .5}
